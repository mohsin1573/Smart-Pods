<% if parent_signed_in? %>
  <%= button_to "Logout", destroy_parent_session_path, method: :delete %> 
<% else %>
<h3>You are not Signed In<h3>
  <%= link_to "Login", new_parent_session_path %>-
  <%= link_to "Sign Up", new_parent_registration_path %><br><br>
<% end %>

<% if !current_parent %>
<%= link_to "Create new pod", new_pod_path %><br><br>
<%= link_to "Add Teacher", new_teacher_path %><br><br>
<% end %>

<% if current_parent %>
  <%= link_to "Add Children", new_child_path %><br><br>
  <%= link_to "Apply for Pod", new_application_path %><br><br>
<% end %>

<%= form_tag(root_path, method: :get) do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search by name, location, or grade number" %>
  <%= submit_tag "Search" %>
<% end %>

<% if @pods.present? %>
  <h1>List of Pods</h1>
  <ul>
    <% @pods.each do |pod| %>
  <li>
    <% pod.images.each do |picture| %>
      <%= image_tag picture %>
    <% end %>
    <%= pod.title %> - <%= pod.location %> - <%= pod.status %>
  </li>
<% end %>
  </ul>
<% end %>

