<body id="page-top">
  <!-- Navigation-->
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
    <div class="container">
      <a class="navbar-brand" href="#page-top" style="height: 100px;">
        <%= image_tag('logo.svg', alt: "..." , style: "height: 100%" ) %>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive"
        aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        Menu
        <i class="fas fa-bars ms-1"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav text-uppercase ms-auto py-4 py-lg-0">
          <% if parent_signed_in? %>
            <li class="nav-item">
            <%= button_to "Logout", destroy_parent_session_path, method: :delete, class: "nav-link btn btn-link" %></li>
          <% else %>
          <li class="nav-item"><%= link_to "Login", new_parent_session_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Sign Up", new_parent_registration_path, class: "nav-link" %></li>
          <% end %>

          <% if !current_parent %>
          <li class="nav-item"><%= link_to "Create new pod", new_pod_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Add Teacher", new_teacher_path, class: "nav-link" %></li>
          <% end %>

          <% if current_parent %>
          <li class="nav-item"><%= link_to "Add Children", new_child_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Apply for Pod", new_application_path, class: "nav-link" %></li>
          <% end %>
          <li class="nav-item"><a class="nav-link" href="#contact">Contact</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Masthead-->
  <header class="masthead">
    <div class="container">
      <div class="masthead-subheading">Empowering Education!</div>
      <div class="masthead-heading text-uppercase">Connecting Communities</div>
      <%= form_tag(root_path, method: :get, class: "search-form") do %>
        <%= text_field_tag :search, params[:search], class: "search-input", placeholder: "Search by name, location, or grade number" %>
        <%= submit_tag "Search", class: "btn btn-primary btn-xl text-uppercase" %>
      <% end %>
    </div>
  </header>
  <!-- Services-->
  <section class="page-section" id="services">
    <div class="container">
      <div class="text-center">
        <h2 class="section-heading text-uppercase">Services</h2>
        <h3 class="section-subheading text-muted">Explore the services we offer</h3>
      </div>
      <div class="row text-center">
        <div class="col-md-4">
          <span class="fa-stack fa-4x">
            <i class="fas fa-circle fa-stack-2x text-primary"></i>
            <i class="fas fa-child fa-stack-1x fa-inverse"></i>
          </span>
          <h4 class="my-3">Childcare Programs</h4>
          <p class="text-muted">Discover our innovative childcare programs designed to foster growth and development in children.</p>
        </div>
        <div class="col-md-4">
          <span class="fa-stack fa-4x">
            <i class="fas fa-circle fa-stack-2x text-primary"></i>
            <i class="fas fa-chalkboard-teacher fa-stack-1x fa-inverse"></i>
          </span>
          <h4 class="my-3">Educational Support</h4>
          <p class="text-muted">Get access to our educational support services aimed at enhancing learning outcomes for students.</p>
        </div>
        <div class="col-md-4">
          <span class="fa-stack fa-4x">
            <i class="fas fa-circle fa-stack-2x text-primary"></i>
            <i class="fas fa-people-arrows fa-stack-1x fa-inverse"></i>
          </span>
          <h4 class="my-3">Community Engagement</h4>
          <p class="text-muted">Participate in our community engagement initiatives focused on building strong, connected neighborhoods.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Pods Grid-->
  
  <section class="page-section bg-light" id="portfolio">
    <div class="container">
      <div class="text-center">
        <h2 class="section-heading text-uppercase">All Available Pods</h2>
        <h3 class="section-subheading text-muted">Select Your Desired Pod</h3>
      </div>
      <div class="row">
        <% if @pods.present? %>
            <div class="row">
              <% @pods.reverse_each do |pod, index| %>
                <div class="col-lg-4 col-sm-6 mb-4">
                  <div class="portfolio-item">
                    <a class="portfolio-link" data-bs-toggle="modal" href="#">
                      <div class="portfolio-hover">
                        <div class="portfolio-hover-content"><i class="fas fa-plus fa-3x"></i></div>
                      </div>
                      <% if pod.images.present? %>
                        <%= image_tag pod.images.first, alt: "..." , class: "img-fluid" %>
                      <% else %>
                        <%= image_tag 'default.png', alt: "Default Image" , class: "img-fluid" %>
                      <% end %>
                    </a>
                    <div class="portfolio-caption">
                      <div class="portfolio-caption-heading"><%= pod.title %></div>
                      <div class="portfolio-caption-subheading text-muted"><%= pod.location %></div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
  <!-- About-->
  <section class="page-section" id="about">
    <div class="container">
      <div class="text-center">
        <h2 class="section-heading text-uppercase">About</h2>
        <h3 class="section-subheading text-muted">Learn about our journey and mission</h3>
      </div>
      <ul class="timeline">
        <li>
          <div class="timeline-image">
            <%= image_tag('about/1.jpg', alt: "..." , class: "rounded-circle img-fluid" ) %>
          </div>
          <div class="timeline-panel">
            <div class="timeline-heading">
              <h4>2010</h4>
              <h4 class="subheading">Our Beginnings</h4>
            </div>
            <div class="timeline-body">
              <p class="text-muted">Founded with a passion for early childhood education, we started small with a vision to create a nurturing environment for children.</p>
            </div>
          </div>
        </li>
        <li class="timeline-inverted">
          <div class="timeline-image">
            <%= image_tag('about/2.jpg', alt: "..." , class: "rounded-circle img-fluid" ) %>
          </div>
          <div class="timeline-panel">
            <div class="timeline-heading">
              <h4>March 2015</h4>
              <h4 class="subheading">Growth and Expansion</h4>
            </div>
            <div class="timeline-body">
              <p class="text-muted">With growing demand and community support, we expanded our services to cater to more families and children, enriching lives along the way.</p>
            </div>
          </div>
        </li>
        <li>
          <div class="timeline-image">
            <%= image_tag('about/3.jpg', alt: "..." , class: "rounded-circle img-fluid" ) %>
          </div>
          <div class="timeline-panel">
            <div class="timeline-heading">
              <h4>January 2020</h4>
              <h4 class="subheading">Focus on Innovation</h4>
            </div>
            <div class="timeline-body">
              <p class="text-muted">Embracing technology and modern teaching methodologies, we continue to innovate and enhance our programs for the benefit of our students.</p>
            </div>
          </div>
        </li>
        <li class="timeline-inverted">
          <div class="timeline-image">
            <%= image_tag('about/4.jpg', alt: "..." , class: "rounded-circle img-fluid" ) %>
          </div>
          <div class="timeline-panel">
            <div class="timeline-heading">
              <h4>Present</h4>
              <h4 class="subheading">Leading the Way</h4>
            </div>
            <div class="timeline-body">
              <p class="text-muted">Today, we are proud to be a leading provider of early childhood education, committed to nurturing young minds and preparing them for a bright future.</p>
            </div>
          </div>
        </li>
        <li class="timeline-inverted">
          <div class="timeline-image">
            <h4>
              Join
              <br />
              Our
              <br />
              Journey!
            </h4>
          </div>
        </li>
      </ul>
    </div>
  </section>

  <!-- Team-->
  <section class="page-section bg-light" id="team">
    <div class="container">
      <div class="text-center">
        <h2 class="section-heading text-uppercase">Our Amazing Team</h2>
        <h3 class="section-subheading text-muted">See the list of our teachers</h3>
      </div>
      <div class="row">
        <div class="col-lg-4">
          <div class="team-member">
            <%= image_tag('team/1.jpg', alt: "..." , class: "mx-auto rounded-circle" ) %>
              <h4>Parveen Anand</h4>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="team-member">
            <%= image_tag('team/2.jpg', alt: "..." , class: "mx-auto rounded-circle" ) %>
              <h4>Diana Petersen</h4>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="team-member">
            <%= image_tag('team/3.jpg', alt: "..." , class: "mx-auto rounded-circle" ) %>
              <h4>Larry Parker</h4>
              <p class="text-muted">Lead Developer</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Core theme JS-->
  <%= javascript_include_tag('scripts.js') %>
</body>
