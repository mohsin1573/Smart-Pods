<div class="container">
  <h1>Pod Search</h1> <p>Total Pods: <%= Pod.count %></p>
  <%= form_with(url: root_path, method: :get, local: true) do %>
    <div class="input-group">
      <%= text_field_tag :title, params[:title], placeholder: "Search by title..." %>
      <%= text_field_tag :location, params[:location], placeholder: "Search by location..." %>
      <%= select_tag :grade, options_for_select(['1', '2', '3', '4', '5']), include_blank: true %> 
      <%= submit_tag "Search Pods", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<% if @pods.present? %>
  <h2>Search Results:</h2>
  <% @pods.each do |pod| %>
  <%= pod.title %>
    <% end %>
<% end %>
<br><br>
<% if parent_signed_in? %>
  <%= link_to "Logout", destroy_parent_session_path, method: :delete %> 
<% else %>
  <%= link_to "Login", new_parent_session_path %>
  <%= link_to "Sign Up", new_parent_registration_path %>
<% end %>

