<div class="container">
  <h1>Your Applications</h1>
  <% if @applications.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>Child Name</th>
          <th>Pod</th>
          <th>Status</th>
          <th>Updated At</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @applications.each do |application| %>
          <tr>
            <td><%= application.child.name %></td>
            <td><%= application.pod.name %></td>
            <td><%= application.status %></td>
            <td><%= application.updated_at %></td>
            <td>
              <%= button_to "Delete", application_path(application), method: :delete, data: { confirm: "Are you sure you want to delete this application?" }, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No applications yet. <%= link_to "Create a new application", new_application_path %></p>
  <% end %>
</div>
