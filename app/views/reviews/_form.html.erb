      <%= form_with(model: @review, local: true) do |form| %>
        <%= form.hidden_field :parent_id, value: current_parent.id %>
        <%= form.hidden_field :pod_id, value: @pod.id %>

        <div class="mb-3">
          <%= form.label :content, class: "form-label" %>
          <%= form.text_area :content, class: "form-control", rows: 5 %>
        </div>

        <div class="mb-3">
          <%= form.label :rating, class: "form-label" %>
          <%= form.number_field :rating, in: 1..5, class: "form-control" %>
        </div>

        <div class="text-center">
          <%= form.submit "Submit Review", class: "btn btn-primary" %>
        </div>
      <% end %>
      