  <div class="col-md-6">
<%= form_with(model: [pod, @review], data: { turbo_frame: "reviews" }) do |form| %>
      <div class="mb-3">
        <label class="form-label">Add a Review</label>
        <%= form.text_area :content, class: 'form-control', rows: 3, style: 'resize: vertical;' %>
      </div>
      <div class="mb-3">
        <label class="form-label">Rating</label>
        <%= form.number_field :rating, class: 'form-control', min: 1, max: 5 %>
      </div>
      <%= form.submit 'Submit', class: 'btn btn-primary' %>
    <% end %>
  </div>
