<div class="container">
  <div class="row">
    <div class="col-md-4">
      <% if @teacher.pictures.present? && @teacher.pictures.first.image.attached? %>
        <%= image_tag @teacher.pictures.first.image, alt: "...", class: "img-fluid rounded-circle" %>
      <% else %>
        <%= image_tag 'team-2.jpg', alt: "Default Image", class: "img-fluid rounded-circle" %>
      <% end %>
    </div>
    <div class="col-md-8">
      <h1><%= @teacher.name %></h1>
      <p><%= @teacher.bio %></p>
      <p><strong>Education:</strong> <%= @teacher.education %></p>
      <%= link_to 'Back', teachers_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
