<h1><%= @teacher.name %></h1>
<p><%= @teacher.bio %></p>
<% @teacher.pictures.each do |picture| %>
  <%= image_tag picture.image, alt: "Teacher Image", class: "img-fluid" %>
<% end %>
<%= link_to 'Edit', edit_teacher_path(@teacher) %>
<%= button_to 'Delete', @teacher, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Back', teachers_path %>
