<%= form_with(model: @pod, url: pods_path, local: true) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
<br><br>
  <%= form.label :description %>
  <%= form.text_area :description %>
<br><br>
  <%= form.label :location %>
  <%= form.text_field :location %>
<br><br>
  <%= form.label :grade %>
  <%= form.number_field :grade %>
<br><br>
  <%= form.label :teacher_id, "Select Teacher" %>
  <%= form.collection_select :teacher_id, Teacher.all, :id, :name, prompt: "Select Teacher" %>
<br><br>
  <%= form.submit %>
<% end %>
<br><br>
<%= link_to "Return to Home Page", root_path %>