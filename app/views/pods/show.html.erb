<head>
      <%= stylesheet_link_tag "profile" %>

<head>
<section class="section about-section gray-bg" id="about">
            <div class="container">
                <div class="row align-items-center flex-row-reverse">
                    <div class="col-lg-6">
                        <div class="about-text go-to">
                            <h3 class="dark-color">About <%= @pod.name %></h3>
                            <h6 class="theme-color lead"><%= @pod.status %></h6>
                            <div class="row about-list">
                                <div class="col-md-6">
                                    <div class="media">
                                        <label>Mentor</label>
                                        <p><%= @pod.teacher.name %></p>
                                    </div>
                                    <div class="media">
                                        <label>Grade</label>
                                        <p><%= @pod.grade %></p>
                                    </div>
                                    <div class="media">
                                        <label>City</label>
                                        <p><%= @pod.address.city %></p>
                                    </div>
                                    <div class="media">
                                        <label>Phone</label>
                                        <p><%= @pod.phone_number %></p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="media">
                                        <label>Zip-Code</label>
                                        <p><%= @pod.address.zipcode %></p>
                                    </div>
                                    <div class="media">
                                        <label>Street</label>
                                        <p><%= @pod.address.street %></p>
                                    </div>
                                     <div class="media">
                                        <label>State</label>
                                        <p><%= @pod.address.state %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="about-avatar">
                            <% if @pod.pictures.present? && @pod.pictures.first.image.attached? %>
                               <%= image_tag @pod.pictures.first.image, alt: "Pod Image", class: "img-fluid rounded" %>
                             <% else %>
                              <%= image_tag 'classes-3.jpg', alt: "Pod Image", class: "img-fluid rounded" %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </section>

<div class="mb-3">
  <% @pod.reviews.each do |review| %>
    <div class="row">
      <div class="col-md-6">
        <div class="card mb-3">
          <div class="card-body">
            <p class="card-title">Review by: <%= review.parent.email %></p>
            <p class="card-text"><strong>Review:</strong> <%= review.content %></p>
            <p class="card-text"><strong>Rating:</strong> <%= review.rating %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
    <%= render partial: 'reviews/form', locals: { pod: @pod } %>
  </div>
