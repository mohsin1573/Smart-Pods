<h1><%= @pod.title %></h1>
<% if @pod.images.present? %>
<%= image_tag @pod.images.first, alt: "..." , class: "img-fluid" %>
<% else %>
<%= image_tag 'default.png', alt: "Default Image" , class: "img-fluid" %>
<% end %>
<p><%= @pod.description %></p>
<p>Location: <%= @pod.location %></p>
<p>Grade: <%= @pod.grade %></p>
<%= link_to 'Edit', edit_pod_path(@pod) %> |
<%= link_to 'Back', pods_path %>
<%= button_to 'Delete', @pod, method: :delete, data: { confirm: 'Are you sure?' } %>
