<head>
      <%= stylesheet_link_tag "profile" %>

<head>
<section class="section about-section gray-bg" id="about">
            <div class="container">
                <div class="row align-items-center flex-row-reverse">
                    <div class="col-lg-6">
                        <div class="about-text go-to">
                            <h3 class="dark-color">About <%= @pod.name %></h3>
                            <h6 class="theme-color lead"><%= @pod.status %></h6>
                            <div class="row about-list">
                                <div class="col-md-6">
                                    <div class="media">
                                        <label>Mentor</label>
                                        <p><%= @pod.teacher.name %></p>
                                    </div>
                                    <div class="media">
                                        <label>Grade</label>
                                        <p><%= @pod.grade %></p>
                                    </div>
                                    <div class="media">
                                        <label>City</label>
                                        <p><%= @pod.address.city %></p>
                                    </div>
                                    <div class="media">
                                        <label>Phone</label>
                                        <p><%= @pod.phone_number %></p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="media">
                                        <label>Zip-Code</label>
                                        <p><%= @pod.address.zipcode %></p>
                                    </div>
                                    <div class="media">
                                        <label>Street</label>
                                        <p><%= @pod.address.street %></p>
                                    </div>
                                     <div class="media">
                                        <label>State</label>
                                        <p><%= @pod.address.state %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="about-avatar">
                            <% if @pod.pictures.present? && @pod.pictures.first.image.attached? %>
                               <%= image_tag @pod.pictures.first.image, alt: "Pod Image", class: "img-fluid rounded" %>
                             <% else %>
                              <%= image_tag 'classes-3.jpg', alt: "Pod Image", class: "img-fluid rounded" %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="card mt-3">
    <div class="card-body">
      <h2>Reviews:</h2>
      <% @pod.reviews.each do |review| %>
        <div class="mb-3">
          <span>Review by: <%= review.parent.email %></span>
          <p><strong>Rating:</strong> <%= review.rating %><br><%= review.content %></p>
          <% if review.parent == current_parent %>
            <%= link_to 'Edit Review', edit_pod_review_path(@pod, review), class: "btn btn-primary btn-sm" %> |
            <%= button_to 'Delete Review', [@pod, review], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
          <% end %>
        </div>
        <hr>
      <% end %>
      <% if parent_signed_in? %>
        <button id="write-review-btn" class="btn btn-success">Write a Review</button>
        <div id="review-form" style="display: none;">
          <%= render 'reviews/form', pod: @pod %>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to "Back to Pods", pods_path, class: "btn btn-secondary mt-3" %>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const writeReviewBtn = document.getElementById('write-review-btn');
    const reviewForm = document.getElementById('review-form');

    writeReviewBtn.addEventListener('click', function() {
      if (reviewForm.style.display === 'none') {
        reviewForm.style.display = 'block';
      } else {
        reviewForm.style.display = 'none';
      }
    });
  });
</script>
